#!/usr/bin/env perl
use Mojolicious::Lite;
use lib'./lib';
use Nukaduke;
use Data::Dumper;


get '/' => sub {
  my $self = shift;
  my $nukadoko = Nukaduke::lookin('./nukadoko.yaml');
  $self->stash(entries => $nukadoko);
  $self->render('index');
};

post '/pickle' => sub {
  my $self = shift;
  my @params = $self->param;
  if ($params[0] =~ /^(.+)\.x$/){
    Nukaduke::pickle('./nukadoko.yaml',$1)
  }
  $self->redirect_to('/');
};

post '/takeout' => sub {
  my $self = shift;
  my @params = $self->param('nukadoko');
  my $old_nukadoko = Nukaduke::lookin('./nukadoko.yaml');
  splice @$old_nukadoko, $params[0], 1;
  Nukaduke::takeout('./nukadoko.yaml', $old_nukadoko);
  $self->redirect_to('/');
};

app->start;
__DATA__

